<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootMainActivity"
        tools:context=".CalculatorActivity">

    <TextView
            style="@style/TextViewDisplay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnDelete" android:layout_marginStart="16dp"
            android:id="@+id/lblDisplay" android:layout_marginEnd="16dp"/>

    <Button
            style="@style/ButtonDelete"
            android:text="X"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnDelete"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/lblDisplay"
    />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.16"/>

    <Button
            style="@style/ButtonNumberPad"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnSeven"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnEight"/>
    <Button
            style="@style/ButtonNumberPad"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnEight"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintStart_toEndOf="@+id/btnSeven" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnNine"/>
    <Button
            style="@style/ButtonNumberPad"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnNine"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintStart_toEndOf="@+id/btnEight"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnDivide"/>
    <Button
            style="@style/ButtonOperation"
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnDivide"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintStart_toEndOf="@+id/btnNine"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.37"/>

    <Button
            style="@style/ButtonNumberPad"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnFour" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnFive"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
    <Button
            style="@style/ButtonNumberPad"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnFive"
            app:layout_constraintStart_toEndOf="@+id/btnFour" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnSix"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
    <Button
            style="@style/ButtonNumberPad"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnSix"
            app:layout_constraintStart_toEndOf="@+id/btnFive" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnMultiply"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"/>
    <Button
            style="@style/ButtonOperation"
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnMultiply"
            app:layout_constraintStart_toEndOf="@+id/btnSix" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"/>


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.58"/>

    <Button
            style="@style/ButtonNumberPad"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnOne" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnTwo"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"/>
    <Button
            style="@style/ButtonNumberPad"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnTwo"
            app:layout_constraintStart_toEndOf="@+id/btnOne" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnThree" app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"/>
    <Button
            style="@style/ButtonNumberPad"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnThree"
            app:layout_constraintStart_toEndOf="@+id/btnTwo" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnSubtract" app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"/>
    <Button
            style="@style/ButtonOperation"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnSubtract"
            app:layout_constraintStart_toEndOf="@+id/btnThree" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"/>


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.79"/>

    <Button
            style="@style/ButtonNumberPad"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnZero" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnDecimal"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            style="@style/ButtonNumberPad"
            android:text="."
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnDecimal"
            app:layout_constraintStart_toEndOf="@+id/btnZero" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnEvaluate"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            style="@style/ButtonNumberPad"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnEvaluate"
            app:layout_constraintStart_toEndOf="@+id/btnDecimal" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnAdd"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            style="@style/ButtonOperation"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnAdd"
            app:layout_constraintStart_toEndOf="@+id/btnEvaluate" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline4"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>